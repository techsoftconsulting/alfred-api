{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    //"strict": true,
    "importHelpers": true,
    "paths": {
      "@shared/*": [
        "src/main/shared/*"
      ],
      "@restaurants/*": [
        "src/main/restaurants/*"
      ],
      "@screens/*": [
        "src/main/screens/*"
      ],
      "@admin/*": [
        "src/main/admin/*"
      ],
      "@apps/*": [
        "apps/*"
      ]
    }
  }
}
